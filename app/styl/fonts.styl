font(fontName, urlName = fontName, weight = normal, style = normal) 
    @font-face
        font-family urlName
        src url("../fonts/{fontName}/{urlName}.woff2") format("woff2"),
            url("../fonts/{fontName}/{urlName}.woff") format("woff"),
            url('../fonts/{fontName}/{urlName}.ttf') format('truetype')
        font-weight weight
        font-style style

font-name = 'Lato'


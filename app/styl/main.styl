html
    font-size 62.5%

body
    font-family 'Lato'
    color color-gray
    font-size 1.4rem

    position relative
    max-width 192.0rem 
    margin 0 auto

*
    box-sizing border-box
    // border 0.1rem solid #a2a1bf 

figure
    padding 0
    padding 0
    margin 0

button
    outline none
    border none
    background none
    cursor pointer
    padding 0

    display block

input
    outline none
    border none

a
    text-decoration none
    color black


h1, h2, h3, p, blockquote
    margin 0

/*-------------------------------
-------- GENERAL STYLES ---------
-------------------------------*/

.overlay
    background-color #f7941d
    position absolute
    height 100%
    width 100%
    top 0
    opacity 0.35

button
    padding 1.8rem 3rem
    min-width 20rem

    color #ffffff
    text-transform uppercase
    font-weight font-weight-bold

    background-color color-pink

    border-radius big-border-radius


html
    font-size 62.5%
    box-sizing border-box

body
    font-family 'Montserrat'
    color color-gray
    font-size 1.4rem

    position relative
    max-width 192.0rem 
    margin 0 auto
    background color-white

*
*:before
*:after 
    box-sizing: inherit
    border 0.1rem solid #a2a1bf 

button
    outline none
    border none
    background none
    cursor pointer
    padding 0

    display block

input
    outline none
    border none

a
    text-decoration none
    color purple 

h1, h2, h3, p, blockquote
    reset()

/*-------------------------------
-------- GENERAL STYLES ---------
-------------------------------*/

.overlay
    background-color #f7941d
    position absolute
    height 100%
    width 100%
    top 0
    opacity 0.35

button
    padding 1.8rem 3rem
    min-width 20rem

    color #ffffff
    text-transform uppercase
    font-weight font-weight-bold

    background-color color-pink

    border-radius big-border-radius

main
    margin-top -13rem

.grid  
    max-width 117rem
    margin-left auto
    margin-right auto
    &__cell
        font-size 1.4rem

/*-------------------------------
------------ HEADER -------------
-------------------------------*/

header
    base-markup-for-pages(3.7rem,3.7rem, transparent)
    z-index 999 

    .menu
        text-align justify
        line-height 0
        padding-right 5rem 

        a
            color color-white
            text-transform uppercase
            font-weight font-weight-regular

            &.selected
                color color-orange

        .helper
            display inline-block
            width 100%
            zoom 1

    .contact
        height 4rem

        p
            display inline-block
            padding-left 3rem
            margin-right 2.5rem           

            background-image url(/app/images/phone.png)
            background-repeat no-repeat
            background-position 0

            color color-white
            font-size 1.5rem
            vertical-align middle

        a
            display inline-block
            width 3rem
            height 3rem

            background-color color-blue
            background-image url(/app/images/email.png)
            background-repeat no-repeat
            background-position center
            
            border-radius big-border-radius
            vertical-align middle


/*-------------------------------
------------- HOME --------------
-------------------------------*/

.home
    base-markup-for-pages(23rem,7rem,,'/app/images/background.png')
    text-align center
    color color-white

    article
        margin-bottom 4rem

        text-transform uppercase
        text-align center !important

        p
            font-size 1.6rem
        h1
            font-size 4.8rem
    
    .industry-item
        background-color color-blue

        padding-top 8rem
        padding-bottom 8.5rem 

        margin-bottom 10rem

        font-weight font-weight-bold
        font-size 2rem
        text-transform uppercase

        &:hover
            background-color color-orange

        .icon
            width 7rem
            height 7rem
            margin 0 auto
            margin-bottom 2rem

            background-position center
            background-repeat no-repeat

            &.education
                background-image url(/app/images/industry/education.png)
            &.business
                background-image url(/app/images/industry/business.png)
            &.technology
                background-image url(/app/images/industry/technology.png)
            &.banking
                background-image url(/app/images/industry/banking.png)
    nav
        text-align center !important
        a
            display inline-block
            width 1.6rem
            height 1.6rem
            
            margin 0 0.35rem

            border 0.2rem solid color-green
            border-radius big-border-radius

            position relative
            
            &::after
                content ''
                display block
                position absolute
                left 0 
                right 0
                bottom 0
                top 0
                margin auto

                width 0.4rem
                height 0.4rem

                border 0.2rem solid color-green
                border-radius big-border-radius

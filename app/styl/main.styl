html
    font-size 62.5%
    box-sizing border-box

body
    font-family 'Montserrat'
    color color-gray
    font-size 1.4rem

    position relative
    max-width 192.0rem 
    margin 0 auto
    background color-white

*
*::before
*::after 
    box-sizing: inherit
    border 0.1rem solid #a2a1bf 

button
    outline none
    border none
    background none
    cursor pointer
    padding 0

    display block

input
    outline none
    border none

a
    text-decoration none
    color purple 

h1, h2, h3, p, blockquote
    reset()

/*-------------------------------
-------- GENERAL STYLES ---------
-------------------------------*/

.overlay
    background-color #f7941d
    position absolute
    height 100%
    width 100%
    top 0
    opacity 0.35

button
    padding 1.8rem 3rem
    min-width 20rem

    color #ffffff
    text-transform uppercase
    font-weight font-weight-bold

    background-color color-pink

    border-radius big-border-radius

main
    margin-top -13rem

.grid  
    max-width 117rem
    padding-left 1.5rem
    padding-right 1.5rem
    margin-left auto
    margin-right auto
    &__cell
        font-size 1.4rem

/*-------------------------------
------------ HEADER -------------
-------------------------------*/

header
    base-markup-for-pages(3.7rem,3.7rem, transparent)
    z-index 999 

    .menu
        text-align justify
        line-height 0
        padding-right 5rem 

        a
            color color-white
            text-transform uppercase
            font-weight font-weight-regular

            &.selected
                color color-orange

        .helper
            display inline-block
            width 100%
            zoom 1

    .contact
        height 4rem

        p
            display inline-block
            padding-left 3rem
            margin-right 2.5rem           

            background-image url(/app/images/phone.png)
            background-repeat no-repeat
            background-position 0

            color color-white
            font-size 1.5rem
            vertical-align middle

        a
            display inline-block
            width 3rem
            height 3rem

            background-color color-blue
            background-image url(/app/images/email.png)
            background-repeat no-repeat
            background-position center
            
            border-radius big-border-radius
            vertical-align middle


/*-------------------------------
------------- HOME --------------
-------------------------------*/

.home
    base-markup-for-pages(23rem,7rem, black)